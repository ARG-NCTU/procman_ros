package procman_lcm;

/*
   message sent by the procman sheriff to provide instructions for a procman
   deputy.
*/

struct orders_t {
    int64_t utime;
    string deputy_id;
    string sheriff_id;

    int32_t ncmds;
    cmd_desired_t cmds[ncmds];

    int32_t num_options;
    string option_names[num_options];
    string option_values[num_options];
}
